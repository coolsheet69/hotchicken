# Create .gitignore in your project root
cat > .gitignore << 'EOF'
# Dependencies
node_modules/

# Build outputs
dist/
build/

# Environment variables
.env
.env.local

# Hardhat files
cache/
artifacts/

# IDE
.vscode/
.idea/

# OS files
.DS_Store
Thumbs.db

# TypeChain (if using)
typechain/
typechain-types/

# Logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
EOF